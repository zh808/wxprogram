/* pages/makeOrder/makeOrder.wxss */

.front {
  height: 30px;
  line-height: 30px;
  font-size: 40rpx;
  text-align: center;
  color: #333;
  background-color: #fff;
  border-bottom: 10px solid #e8e8e8;
}

.img_loc {
  width: 20px;
  height: 30px;
}

.img_pac {
  width: 36px;
  height: 42px;
}

.img_icon {
  width: 20px;
  height: 20px;
}

.img_size {
  width: 50px;
  height: 50px;
}

.address {
  display: flex;
  padding: 5px;
  border-bottom: 1px solid #e8e8e8;
  justify-content: space-around;
  background-color: #fff;
  align-items: center;
}

.address_show {
  width: 68%;
  border-right: 1px solid #e8e8e8;
}

.address_pos {
  padding: 10px;
  font-size: 30rpx;
  color: #333;
}

.address_inf {
  padding: 0 10px 10px 10px;
  font-size: 25rpx;
  color: #666;
}

.FromAdressBook {
  display: flex;
  padding: 10px;
  align-items: center;
  font-size: 30rpx;
  color: #28b6ff;
}

.orderCalc {
  background-color: #fff;
}

.package {
  display: flex;
}

.packageWay {
  width: 50%;
  font-size: 20rpx;
  padding: 5px;
  border-bottom: 1px solid #e8e8e8;
  text-align: center;
}

.packageWay_intro {
  display: flex;
  justify-content: space-between;
}

.packageWay_intro1 {
  width: 20%;
  padding: 5px;
  font-size: 25rpx;
}

.packageWay_intro2 {
  width: 60%;
  margin: 20px 0 5px 0;
}

.packageWay_intro3 {
  width: 20%;
}

.size {
  display: flex;
  justify-content: space-between;
  padding: 10px 0 10px 0;
  border-bottom: 1px solid #e8e8e8;
  font-size: 25rpx;
}

.size_select {
  width: 25%;
  text-align: center;
}

.number_select {
  display: flex;
  padding: 10px;
  border-bottom: 1px solid #e8e8e8;
  justify-content: space-between;
  align-items: center;
}

.text_area {
  display: flex;
  justify-content: space-between;
  width: 80%;align-items: center;
}

.price {
  text-align: center;align-items: center;
  margin: 30px 0 30px 0;
}

.confirm {
  height: 60px;
  margin: 0;
  border-radius: 0;
}
.btn_click{
  color: red;
}